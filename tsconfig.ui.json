{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // "noEmit": true,
    "outDir": "./lib-ui", // XXX Gets deleted by Vite build; does it matter?
    "jsx": "react-jsx"
  },
  "include": ["src-ui/"],
  "references": [{ "path": "./tsconfig.ui.node.json" }]
}
