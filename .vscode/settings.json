{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,

  "markdownlint.config": {
    "MD033": false  // no-inline-html  
  },
  "jest.autoRun": {
    "watch": false
  },
  "remote.autoForwardPorts": false,
  "typescript.tsdk": "node_modules/typescript/lib",
  // From https://code.visualstudio.com/docs/setup/linux#_visual-studio-code-is-unable-to-watch-for-file-changes-in-this-large-workspace-error-enospc
  // with some project-specific build output additions
  "files.watcherExclude": {
    // "**/.git/objects/**": true,
    // "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "/lib/**": true,
    "/lib-ui/**": true
  }
}
