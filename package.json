{
  "name": "github-classbot",
  "version": "0.1.0",
  "private": true,
  "description": "GitHub Classroom Helper Bot",
  "author": "Spiros Papadimitriou",
  "license": "ISC",
  "homepage": "https://github.com/clusterhack/github-classbot",
  "keywords": [
    "probot",
    "probot-app",
    "github",
    "education",
    "classroom"
  ],
  "scripts": {
    "dev:bot": "DOTENV_CONFIG_PATH=.env.dev node ./lib/main.js",
    "dev:ui": "DOTENV_CONFIG_PATH=.env.dev vite",
    "dev": "concurrently -c auto -k -i --default-input-target ui npm:dev:*",
    "build:bot": "time -f 'Done in %esec (%P); %MKB' tsc --project tsconfig.bot.json",
    "build:ui": "tsc --project tsconfig.ui.json && vite build",
    "build": "concurrently -c auto npm:build:*",
    "preview": "DOTENV_CONFIG_PATH=.env.dev VITE_DEV_STATIC=true node lib/main.js",
    "start": "node lib/main.js",
    "deploy": "pm2 start --name classbot --time lib/main.js",
    "test": "jest",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "dockerode": "^3.3.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "helmet": "^6.0.1",
    "ignore": "^5.2.4",
    "jszip": "^3.10.1",
    "knex": "^2.4.2",
    "mustache": "^4.2.0",
    "mysql": "^2.18.1",
    "node-fetch": "^2.6.9",
    "objection": "^3.0.1",
    "probot": "^12.2.4",
    "rate-limiter-flexible": "^2.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/dockerode": "^3.3.14",
    "@types/express-session": "^1.17.6",
    "@types/jest": "^29.0.0",
    "@types/mustache": "^4.2.2",
    "@types/node": "^18.0.0",
    "@types/node-fetch": "^2.6.2",
    "@types/react": "^18.0.31",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vitejs/plugin-react": "^3.1.0",
    "concurrently": "^8.0.1",
    "dotenv-cli": "^7.1.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "http-proxy-middleware": "^2.0.6",
    "jest": "^29.0.0",
    "nock": "^13.0.5",
    "smee-client": "^1.2.2",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.1.3",
    "vite": "^4.2.1"
  },
  "engines": {
    "node": ">= 16.16.0"
  }
}
